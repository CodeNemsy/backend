<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.kosa.backend.pay.repository.SubscriptionMapper">

    <!-- ================== ResultMap ================== -->
    <resultMap id="SubscriptionResultMap"
               type="kr.or.kosa.backend.pay.entity.Subscription">
        <id     column="subscription_id"   property="subscriptionId"/>
        <result column="user_id"           property="userId"/>
        <result column="order_id"          property="orderId"/>
        <result column="subscription_type" property="subscriptionType"/>

        <!-- DATETIME ↔ LocalDateTime 매핑 -->
        <result column="start_date"
                property="startDate"
                javaType="java.time.LocalDateTime"/>
        <result column="end_date"
                property="endDate"
                javaType="java.time.LocalDateTime"/>

        <result column="status"            property="status"/>
    </resultMap>

    <!-- ================== INSERT ================== -->
    <insert id="insertSubscription"
            parameterType="kr.or.kosa.backend.pay.entity.Subscription"
            useGeneratedKeys="true"
            keyProperty="subscriptionId">
        INSERT INTO subscriptions (
            user_id,
            order_id,
            subscription_type,
            start_date,
            end_date,
            status
        )
        VALUES (
            #{userId},
            #{orderId},
            #{subscriptionType},
            #{startDate},
            #{endDate},
            #{status}
        )
    </insert>

    <!-- ================== 특정 유저 ACTIVE 구독 조회 ================== -->
    <select id="findActiveSubscriptionsByUserId"
            resultMap="SubscriptionResultMap">
        SELECT
            subscription_id,
            user_id,
            order_id,
            subscription_type,
            start_date,
            end_date,
            status
        FROM subscriptions
        WHERE user_id = #{userId}
          AND status = 'ACTIVE'
          AND end_date &gt; NOW()
        ORDER BY end_date DESC
    </select>

    <!-- ================== orderId 로 단건 조회 ================== -->
    <select id="findSubscriptionByOrderId"
            resultMap="SubscriptionResultMap">
        SELECT
            subscription_id,
            user_id,
            order_id,
            subscription_type,
            start_date,
            end_date,
            status
        FROM subscriptions
        WHERE order_id = #{orderId}
    </select>

    <!-- ================== 최신 ACTIVE BASIC (타입별) 1건 ================== -->
    <select id="findLatestActiveSubscriptionByUserIdAndType"
            resultMap="SubscriptionResultMap">
        SELECT
            subscription_id,
            user_id,
            order_id,
            subscription_type,
            start_date,
            end_date,
            status
        FROM subscriptions
        WHERE user_id = #{userId}
          AND subscription_type = #{subscriptionType}
          AND status = 'ACTIVE'
          AND end_date &gt; NOW()
        ORDER BY end_date DESC
        LIMIT 1
    </select>

    <!-- ================== 상태 CANCELED 등으로 변경 ================== -->
    <update id="updateSubscriptionStatusToCanceled">
        UPDATE subscriptions
        SET status = #{status}
        WHERE order_id = #{orderId}
    </update>

    <!-- ================== 이미 끝난 ACTIVE → EXPIRED 전환 ================== -->
    <update id="expireSubscriptionsByUserId">
        UPDATE subscriptions
        SET status = 'EXPIRED'
        WHERE user_id = #{userId}
        AND status = 'ACTIVE'
        AND end_date &lt;= NOW()
    </update>
</mapper>
