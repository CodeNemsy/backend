<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.kosa.backend.pay.repository.SubscriptionMapper">

    <resultMap id="SubscriptionResultMap"
               type="kr.or.kosa.backend.pay.entity.Subscription">
        <id     column="subscription_id"  property="subscriptionId"/>
        <result column="user_id"          property="userId"/>
        <result column="order_id"         property="orderId"/>
        <result column="subscription_type" property="subscriptionType"/>
        <result column="start_date"       property="startDate"/>
        <result column="end_date"         property="endDate"/>
        <result column="status"           property="status"/>
    </resultMap>

    <insert id="insertSubscription"
            parameterType="kr.or.kosa.backend.pay.entity.Subscription"
            useGeneratedKeys="true"
            keyProperty="subscriptionId">
        INSERT INTO subscriptions (
        user_id,
        order_id,
        subscription_type,
        start_date,
        end_date,
        status
        )
        VALUES (
        #{userId},
        #{orderId},
        #{subscriptionType},
        #{startDate},
        #{endDate},
        #{status}
        )
    </insert>

    <select id="findActiveSubscriptionsByUserId"
            resultMap="SubscriptionResultMap">
        SELECT
        subscription_id,
        user_id,
        order_id,
        subscription_type,
        start_date,
        end_date,
        status
        FROM subscriptions
        WHERE user_id = #{userId}
        AND status = 'ACTIVE'
        ORDER BY end_date DESC
    </select>

    <select id="findSubscriptionByOrderId"
            resultMap="SubscriptionResultMap">
        SELECT
        subscription_id,
        user_id,
        order_id,
        subscription_type,
        start_date,
        end_date,
        status
        FROM subscriptions
        WHERE order_id = #{orderId}
    </select>

    <update id="updateSubscriptionStatusToCanceled">
        UPDATE subscriptions
        SET status = #{status}
        WHERE order_id = #{orderId}
    </update>

</mapper>
