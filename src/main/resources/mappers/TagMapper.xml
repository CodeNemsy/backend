<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.kosa.backend.tag.mapper.TagMapper">

    <!-- 모든 태그 조회 -->
    <select id="findAllTags" resultType="kr.or.kosa.backend.tag.domain.Tag">
        SELECT tag_id, tag_name
        FROM tag
        ORDER BY tag_name
    </select>

    <!-- 자유게시판 글의 태그 목록 -->
    <select id="findTagsByFreeboardId" resultType="kr.or.kosa.backend.tag.domain.Tag">
        SELECT t.tag_id, t.tag_name
        FROM tag t
        JOIN boardtag bt ON t.tag_id = bt.tag_id
        WHERE bt.freeboard_id = #{freeboardId}
    </select>

    <!-- 코드게시판 글의 태그 목록 -->
    <select id="findTagsByCodeboardId" resultType="kr.or.kosa.backend.tag.domain.Tag">
        SELECT t.tag_id, t.tag_name
        FROM tag t
        JOIN boardtag bt ON t.tag_id = bt.tag_id
        WHERE bt.codeboard_id = #{codeboardId}
    </select>

    <!-- 태그 등록 -->
    <insert id="insertTag" parameterType="kr.or.kosa.backend.tag.domain.Tag" useGeneratedKeys="true" keyProperty="tagId">
        INSERT INTO tag (tag_name) VALUES (#{tagName})
    </insert>

    <!-- 자유게시판 매핑 등록 -->
    <insert id="insertFreeboardTag" parameterType="kr.or.kosa.backend.tag.dto.TagDTO">
        INSERT INTO boardtag (freeboard_id, tag_id)
        VALUES (#{freeboardId}, #{tagId})
    </insert>

    <!-- 코드게시판 매핑 등록 -->
    <insert id="insertCodeboardTag" parameterType="kr.or.kosa.backend.tag.dto.TagDTO">
        INSERT INTO boardtag (codeboard_id, tag_id)
        VALUES (#{codeboardId}, #{tagId})
    </insert>

    <!-- 게시글 삭제 시 매핑 제거 -->
    <delete id="deleteByFreeboardId" parameterType="long">
        DELETE FROM boardtag WHERE freeboard_id = #{freeboardId}
    </delete>

    <delete id="deleteByCodeboardId" parameterType="long">
        DELETE FROM boardtag WHERE codeboard_id = #{codeboardId}
    </delete>

</mapper>
