<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.kosa.backend.user.mapper.UserMapper">

    <!-- ========= Domain 매핑 ========= -->
    <resultMap id="UserMap" type="kr.or.kosa.backend.user.domain.User">
        <id property="id" column="id"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="nickname" column="nickname"/>
        <result property="image" column="image"/>
        <result property="grade" column="grade"/>
        <result property="role" column="role"/>
        <result property="githubToken" column="github_token"/>
        <result property="refreshToken" column="refresh_token"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="deletedAt" column="deleted_at"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="enabled" column="enabled"/>
    </resultMap>

    <!-- ========= SELECT ========= -->
    <select id="findByEmail" resultMap="UserMap">
        SELECT *
        FROM USERS
        WHERE email = #{email}
    </select>

    <select id="findByNickname" resultMap="UserMap">
        SELECT *
        FROM USERS
        WHERE nickname = #{nickname}
    </select>

    <select id="findById" resultMap="UserMap">
        SELECT *
        FROM USERS
        WHERE id = #{id}
    </select>

    <select id="selectUsersByIds" resultMap="UserMap">
        SELECT id, nickname, email
        FROM USERS
        WHERE id IN
        <foreach collection="userIds" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </select>

    <!-- ========= INSERT ========= -->
    <insert id="insertUser"
            parameterType="kr.or.kosa.backend.user.domain.User"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO USERS (
        email, password, name, nickname, image
        ) VALUES (
        #{email}, #{password}, #{name}, #{nickname}, #{image}
        )
    </insert>

    <insert id="insertGithubUser"
            parameterType="kr.or.kosa.backend.user.domain.User">
        INSERT INTO USERS (
        email, name, nickname, image,
        github_token, role, password
        ) VALUES (
        #{email}, #{name}, #{nickname}, #{image},
        #{githubToken}, #{role}, 'GITHUB_USER'
        )
    </insert>

    <!-- ========= UPDATE ========= -->
    <update id="updateUser" parameterType="kr.or.kosa.backend.user.domain.User">
        UPDATE USERS
        SET name = #{name},
        nickname = #{nickname},
        image = #{image}
        WHERE id = #{id}
    </update>

    <update id="updateGithubToken">
        UPDATE USERS
        SET github_token = #{githubToken}
        WHERE id = #{id}
    </update>

    <update id="updateUserImage">
        UPDATE USERS
        SET image = #{image}
        WHERE id = #{id}
    </update>

    <update id="updatePassword">
        UPDATE USERS
        SET password = #{password}
        WHERE id = #{id}
    </update>

    <update id="updateUserInfo">
        UPDATE USERS
        SET name = #{name},
        nickname = #{nickname},
        updated_at = NOW()
        WHERE id = #{id}
    </update>

    <update id="updateUserEmail">
        UPDATE USERS
        SET email = #{email}
        WHERE id = #{id}
    </update>

    <!-- refresh token 보관 -->
    <update id="updateRefreshToken">
        UPDATE USERS
        SET refresh_token = #{token}
        WHERE id = #{id}
    </update>

    <!-- ========= DELETE ========= -->
    <delete id="deleteUser">
        DELETE FROM USERS
        WHERE id = #{id}
    </delete>

    <!-- ==========================
         90일 뒤 자동 탈퇴 처리
    ========================== -->

    <!-- 1) 탈퇴 예약 -->
    <update id="scheduleDelete">
        UPDATE USERS
        SET deleted_at = #{deletedAt},
        is_deleted = 0
        WHERE id = #{id}
    </update>

    <!-- 2) 탈퇴 복구 -->
    <update id="restoreUser">
        UPDATE USERS
        SET deleted_at = NULL
        WHERE id = #{id}
    </update>

    <!-- 3) 90일 지난 계정 조회 -->
    <select id="findUsersToDelete" resultMap="UserMap">
        <![CDATA[
        SELECT *
        FROM USERS
        WHERE is_deleted = 0
          AND deleted_at IS NOT NULL
          AND deleted_at < #{now}
        ]]>
    </select>

    <!-- 4) Soft Delete 처리 -->
    <update id="softDeleteUser">
        UPDATE USERS
        SET is_deleted = 1
        WHERE id = #{id}
    </update>

    <!-- 5) 개인정보 익명화 -->
    <update id="anonymizeUser">
        UPDATE USERS
        SET email = #{email},
        name = #{name}
        WHERE id = #{id}
    </update>

</mapper>